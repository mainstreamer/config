# Brewfile.dev - Developer packages (language runtimes + LSP servers)
# Install: brew bundle --file=Brewfile.dev
# Requires: --dev mode

# ------------------------------------------------------------------------------
# Node.js / JavaScript
# ------------------------------------------------------------------------------
brew "node"
brew "typescript"
brew "typescript-language-server"

# ------------------------------------------------------------------------------
# PHP
# ------------------------------------------------------------------------------
brew "php"
brew "composer"

# ------------------------------------------------------------------------------
# Python
# ------------------------------------------------------------------------------
brew "python@3"
brew "pyright"      # Python LSP

# ------------------------------------------------------------------------------
# Rust
# ------------------------------------------------------------------------------
brew "rustup-init"  # installs rustc, cargo, rustfmt, clippy
brew "rust-analyzer"

# ------------------------------------------------------------------------------
# Go
# ------------------------------------------------------------------------------
brew "go"
brew "gopls"        # Go LSP
