#!/usr/bin/bash
# Atuin - shell history sync
# Provides cross-machine history synchronization with encrypted cloud storage
# Install: https://atuin.sh or via package manager
# Usage: Press Ctrl+R to open atuin search
#
# DISABLED BY DEFAULT - to enable:
#   Option 1: touch ~/.config/atuin/.enabled
#   Option 2: export ATUIN_ENABLED=1 in your ~/.bashrc.d/local or similar
#
# Setup after enabling:
#   atuin register -u <user> -e <email>  # or: atuin login
#   atuin import auto                     # import existing history
#   atuin sync
#
if command -v atuin &>/dev/null; then
    if [ "$ATUIN_ENABLED" = "1" ] || [ -f "$HOME/.config/atuin/.enabled" ]; then
        eval "$(atuin init bash)"
    fi
fi
